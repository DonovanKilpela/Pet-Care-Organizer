@model List<DailyTasks>

@{
    ViewData["Title"] = "Daily Tasks";
}

<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>

    <!-- Task Listing Table -->
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Task</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var task in Model)
            {
                <tr>
                    <td>@task.Description</td>
                    <td>
                        <!-- Status badge with conditional styling -->
                        <span class="badge @(task.IsCompleted ? "bg-success" : "bg-warning")">
                            @(task.IsCompleted ? "Completed" : "Pending")
                        </span>
                    </td>
                    <td>
                        <!-- Action buttons -->
                        <a asp-action="Edit" asp-route-id="@task.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@task.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-action="Create" class="btn btn-primary">Add New Task</a>
</div>
