@{
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 mx-auto text-center">
            <h1 class="display-4">🐾 PetCareManager</h1>
            <p class="lead">Track your pet's daily care in one place</p>

            <div class="row mt-5 g-4">
                <!-- Feature Cards -->
                <div class="col-md-4">
                    <!-- Daily Tasks Card -->
                    <a href="/DailyTasks" class="text-decoration-none">
                        <div class="card h-100 clickable-card">
                            <div class="card-body">
                                <h5>Daily Tasks</h5>
                                <p>Log feedings, walks, and grooming</p>
                                <div class="mt-3">
                                    <span class="badge bg-primary">Go to Tasks →</span>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>

                <div class="col-md-4">
                    <!-- Appointments Card -->
                    <a href="/Appointments" class="text-decoration-none">
                        <div class="card h-100 clickable-card">
                            <div class="card-body">
                                <h5>Appointments</h5>
                                <p>Manage vet visits and reminders</p>
                                <div class="mt-3">
                                    <span class="badge bg-primary">Go to Appointments →</span>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            </div>

            <div class="mt-4">
                <a href="/About" class="btn btn-outline-secondary px-4">Learn More</a>
            </div>
        </div>
    </div>
</div>
